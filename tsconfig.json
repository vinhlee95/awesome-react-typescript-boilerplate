{
	"compilerOptions": {
		"paths": { "*": ["types/*"] },
		"moduleResolution": "node",
		"outDir": "./dist/",
		"sourceMap": true,
		"jsx": "react",
		"module": "es6",
		"target": "esnext",
		"strict": true,
		"noImplicitAny": true,
		"baseUrl": "src"
	},
	"include": ["src/**/*"],
	"exclude": ["dist", "node_modules"]
}
